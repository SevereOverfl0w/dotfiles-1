#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

ghq_root="$(git config ghq.root || echo ${GHQ_ROOT:-$HOME/src})"

alias ls='ls --color=auto'
PS1='[\u@\h \W]\$ '

export PATH=$HOME/bin:$PATH

# CDPATH allows us to use jhq and get quick cd for free
if [ -f /usr/bin/ghq ]; then
  export CDPATH=${ghq_root}/github.com/juxt:$HOME/src/github.com
fi

if [ -f /usr/bin/ruby ]; then
  export PATH=$GEM_HOME/bin:$PATH
fi

export PATH=${ghq_root}/github.com/juxt/dotfiles/bin:$PATH
